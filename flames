#include<iostream>
#include<string>
using namespace std;
int main()
{
    string a,b;
    getline(cin,a);
    getline(cin,b);
    int n=a.size();
    int m=b.size();
    //to find unmatched character
    for(int i=0;i<n;i++)
    {
        for(int j=0;j<m;j++)
        {
            if(a[i]==b[j])
            {
                a[i]='*';
                b[j]='*';
            }
        }
    }
    //cout<<a;to fing number of unmathed charcter in booth stringd
    int count=0;
    for(int i=0;i<n;i++)
    {
        if(a[i]!='*')
        {
            count++;
        }
    }
     for(int i=0;i<m;i++)
    {
        if(b[i]!='*')
        {
            count++;
        }
    }
   cout<<count<<endl;
   string f="flames";
   int f_n=f.size();
  // cout<<f_n;
   int idx=0,f_c=0;
   while(f_n>0)
   {
       f_c++;
       if(idx==f_n-1)
       {
           idx=0;
       }
       else
       {
           idx++;
       }
       if(f_c==count)
       {
           int j=0;
           if(idx==0)
           {
               j=0;
           }
           else
           {
               j=idx--;
           }
           if(j<f_n-1)
           {
               f[j]='*';
               j++;
           }
           f_c=0;
           f_n--;
       }
   }
  
   cout<<f;
   
}
   
